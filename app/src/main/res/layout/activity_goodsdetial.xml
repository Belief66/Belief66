<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Goodsdetial">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F5F5F6"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/detail_back"
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/sysback" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/detail_back"
            android:text="商品详情"
            android:textSize="21sp" />

        <ImageButton
            android:id="@+id/more"
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="277dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/moreinfos" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="match_parent"
        android:layout_height="390dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/shape3"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/lingshoujia"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="-2dp"
            android:layout_marginLeft="10dp"
            android:text="现在下单每件仅售"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/rmb"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="2dp"
            android:text="￥"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/Money"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="2dp"
            android:text="0.0"
            android:textColor="@color/white"
            android:textSize="30sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="198dp">

        <TextView
            android:id="@+id/Name2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape3"
            android:gravity="center"
            android:text="天猫"
            android:textColor="#FFFFFF"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/introduce2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Name2"
            android:layout_marginTop="27dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="9dp"
            android:text="郑州销量过百 正品保证 宝宝馋了溶豆豆婴儿无添加剂"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/introduce2"
            android:text="店铺已被40.8万人圈粉"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/payed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fans"
            android:layout_marginLeft="-136dp"
            android:layout_marginTop="19dp"
            android:layout_toRightOf="@id/fans"
            android:text=" 3731人付款"
            android:textColor="#FB8C00"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/bk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Name2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bk_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/shapecontact"
                android:text=" 广告 "
                android:textColor="@color/black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/bk_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/shapecontact"
                android:text=" 先用后付 "
                android:textColor="#F76"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/bk_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/shapecontact"
                android:text=" 包邮 "
                android:textColor="#F76"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/bk_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shapecontact"
                android:text=" 公益 "
                android:textColor="#F76"
                android:textSize="19sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bk"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/shapecontact"
            android:text="宝宝馋了旗舰店"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/line" />


        <ImageButton
            android:id="@+id/bottom001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shop" />

        <TextView
            android:id="@+id/text001"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom001"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:text="店铺" />

        <ImageButton
            android:id="@+id/bottom002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="95dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/kefu" />
        <TextView
            android:id="@+id/text002"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom001"
            android:layout_alignParentStart="true"
            android:layout_marginStart="96dp"
            android:layout_marginTop="1dp"
            android:text="客服" />
        <ImageButton
            android:id="@+id/bottom003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/shoucang" />
        <TextView
            android:id="@+id/text003"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom001"
            android:layout_alignParentStart="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="1dp"
            android:text="收藏" />

        <TextView
            android:id="@+id/tv_jiarugouche"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="102dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shapleft"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/tv_shopping"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shapright"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="立即购买" />
    </RelativeLayout>





</LinearLayout>