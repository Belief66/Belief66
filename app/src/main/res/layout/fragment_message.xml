<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDCDF"

    tool:context=".MessageFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#DDDCDF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="41dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:text="消息"
            android:textSize="20sp"
            tool:ignore="HardcodedText" />
        <Button
            android:id="@+id/search_addressbook"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="51dp"
            android:background="@drawable/tongxunlu" />
        <Button
            android:id="@+id/button3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="7dp"
            android:background="@drawable/plus" />
        <EditText
            android:id="@+id/Edittext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="36dp"
            android:background="@drawable/shapetypical"
            android:gravity="center_horizontal"
            android:hint="搜索"
            android:maxLines="1"
            android:paddingTop="3dp"
            android:textSize="20sp"
            tool:ignore="Autofill,HardcodedText"
            android:inputType="textNoSuggestions" />
        <Button
            android:id="@+id/button4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/sousuobtn" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="41dp"
            android:src="@drawable/shu"
            tool:ignore="ContentDescription" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/shapetypical"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvtalk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</RelativeLayout>