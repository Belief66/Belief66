<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShopFragment" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/shop_shop"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:background="@drawable/shapecontact"
            android:gravity="center"
            android:text="继续购物"
            android:textColor="#000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/shop_manage"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shapecontact"
            android:gravity="center"
            android:text="管理"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/accountRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/shop_all"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="全选"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/shop_heji"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="68dp"
            android:layout_toRightOf="@+id/shop_all"
            android:gravity="center"
            android:text="合计:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shop_sum"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@+id/shop_heji"
            android:gravity="center|left"
            android:text="0.0"
            android:textColor="#FB8C00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/shop_heji"
            android:gravity="center|left"
            android:text="￥"
            android:textColor="#FB8C00"
            android:textSize="20sp" />
        <Button
            android:id="@+id/shop_jiesuan"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/shape"
            android:text="结算"
            android:textColor="#FFF"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>

