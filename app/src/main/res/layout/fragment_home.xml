<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shapetop"
        >
        <Spinner
            android:id="@+id/spcity"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:entries="@array/cities"
            android:spinnerMode="dropdown"/>
        <EditText
            android:id="@+id/search"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:hint="@string/sousuo1"
            android:background="@drawable/shape"
            android:maxLines="1"
            android:textColor="#E53935"
            android:textSize="20sp"
            android:inputType="text"
            android:importantForAutofill="no" />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="@string/sousuo"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/shapesousuo"/>
        <ImageButton
            android:id="@+id/sysbtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/someco"
            android:contentDescription="@string/todo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="183dp"
        tools:ignore="DisableBaselineAlignment">
        <ViewFlipper
            android:id="@+id/flipper1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inAnimation="@anim/left_in"
            android:outAnimation="@anim/right_out"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imgslide"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imgslide2"
                android:contentDescription="@string/todo" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imgslide3"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imgslide4"
                android:contentDescription="@string/todo" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imgslide5"
                android:contentDescription="@string/todo" />
        </ViewFlipper>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@color/white"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/shape3"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/tbtt" />
            123<TextView
            android:id="@+id/tv_timer"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="@drawable/shape4"
            android:text="@string/times"
            android:textColor="@color/purple_500"
            android:textSize="15dp"/>
        </LinearLayout>

        <ViewFlipper
            android:id="@+id/flipper2"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="70dp"
            android:background="@color/white"
            android:inAnimation="@anim/anim_come_in"
            android:outAnimation="@anim/anim_get_out"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="70dp"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:text="热议"
                        android:textColor="#E53935"
                        android:background="@drawable/shape4"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="记住秋冬最好不要穿这三种鞋和裙子搭配"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:text="热议"
                        android:textColor="#E53935"
                        android:background="@drawable/shape4"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="她11年没有剪发只染发，解开时候惊艳了"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_gravity="center_vertical"
                android:layout_height="70dp"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:text="清仓"
                        android:textColor="#E53935"
                        android:background="@drawable/shape4"
                        />
                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="这样穿搭好吸睛，好靓眼，好帅捏"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:text="重磅"
                        android:textColor="#E53935"
                        android:background="@drawable/shape4"
                        />
                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="买99送199，买299送599，买到就是赚到"/>
                </LinearLayout>
            </LinearLayout>
        </ViewFlipper>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_homepagebottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:padding="7dp"
        android:background="@drawable/shape2"
        android:layout_marginTop="2dp"/>
</LinearLayout>