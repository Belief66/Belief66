<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyFragment"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewid"
            android:layout_width="189dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="143dp"
            android:layout_marginTop="64dp"
            android:textColor="@color/black"
            android:text="账户名："
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textViewother"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="143dp"
            android:layout_marginTop="98dp"
            android:text="关注 1   |   粉丝  0  |    好友 0" />

        <TextView
            android:id="@+id/touxiang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shapemy"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:text="  LOGIN"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewname"
            android:layout_width="189dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="143dp"
            android:layout_marginTop="27dp"
            android:gravity="center_vertical"
            android:text="游客tb_id0018998"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/setting" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:layout_below="@id/textView4"
            android:layout_alignLeft="@id/textView4"
            android:gravity="center"
            android:textSize="13sp"
            android:text="设置" />




    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_mytaobao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shapetypical"
        android:src="@drawable/mytaobao"
        />


</LinearLayout>