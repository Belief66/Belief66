<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="127dp"
        android:layout_height="188dp"
        android:src="@drawable/ad1" />

    <RelativeLayout
        android:layout_width="269dp"
        android:layout_height="182dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/name2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape3"
            android:gravity="center"
            android:text="天猫"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/introduce2"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name2"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="郑州销量过百 正品保证 宝宝馋了溶豆豆婴儿无添加剂"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/introduce2"
            android:text="店铺已被40.8万人圈粉"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fans"
            android:layout_marginTop="10dp"
            android:background="@drawable/shapecontact"
            android:text="聚"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fans"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/ju"
            android:text="¥32.9"
            android:textColor="#FFA500"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/payed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fans"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/price"
            android:text=" 3731人付款"
            android:textColor="#CCCCCC"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/bk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bk_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/shapecontact"
                android:text=" 广告 "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bk_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/shapecontact"
                android:text=" 先用后付 "
                android:textColor="#F76"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bk_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/shapecontact"
                android:text=" 包邮 "
                android:textColor="#F76"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bk_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shapecontact"
                android:text=" 公益 "
                android:textColor="#F76"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bk"
            android:layout_marginTop="10dp"
            android:text="宝宝馋了旗舰店"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/gwc"
            android:layout_width="108dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/payed"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="22dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="-67dp"
            android:layout_toRightOf="@id/dp"
            android:src="@drawable/shopclick" />

    </RelativeLayout>


</LinearLayout>